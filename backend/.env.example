# Copy this file to backend/.env and adjust values for your environment.
# Secrets belong in environment variables or secret managers â€“ keep this file safe to share.

APP_NAME=SwimReg
APP_VERSION=0.1.0
ENV=dev

SECRET_KEY=dev-change-me
DATABASE_URL=postgresql+psycopg2://swimuser:change_me@db:5432/swimdb

MEDIA_DIR=/app/storage/media
DOCS_DIR=/app/storage/docs
RESULTS_DIR=/app/storage/results
STATIC_DIR=/app/static

LOG_LEVEL=INFO
REQUEST_ID_HEADER=X-Request-ID
PROXY_TRUSTED_HOSTS=swimproxy,localhost,127.0.0.1

REDIS_URL=redis://redis:6379/0
CACHE_PREFIX=swimreg:cache
RATE_LIMIT_DEFAULT=200/minute

LANGUAGE_COOKIE_NAME=swimreg_lang
DEFAULT_LANGUAGE=ru

SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_TLS=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=no-reply@swimreg.local
ADMIN_EMAIL=organizer@swimreg.local

S3_ENDPOINT=http://minio:9000
S3_BUCKET=swimreg
S3_ACCESS_KEY=change_me
S3_SECRET_KEY=change_me
S3_REGION=us-east-1
